  <!-- Lightweight JS: Reviews + Booking Modal + GA4 hooks + year + small UX niceties -->

  <script defer>

    // Update footer year

    document.getElementById('yr').textContent = new Date().getFullYear();



    // Google Reviews Integration Configuration
    // TODO: Replace with your backend proxy endpoint URL
    // Example: 'https://yourdomain.com/api/google-reviews'
    const GOOGLE_REVIEWS_API_URL = ''; // Leave empty to use static reviews
    const CACHE_DURATION = 3600000; // Cache for 1 hour (in milliseconds)
    const CACHE_KEY = 'google_reviews_cache';

    // Fallback static reviews (used if API is unavailable)
    const fallbackReviews = [
      {
        author: "Austin",
        rating: 5,
        text: "Can't say enough good things about Jon and my experience with Emmons Luxury. We had an unforgettable time with the AMG GT43, and the experience was seamless from start to finish. The car was meticulously maintained, and the AMG performance is incredible!",
        date: "2024-12-01"
      },
      {
        author: "John Dyal",
        rating: 5,
        text: "Excellent luxury sport sedan! The AMG GT43 delivers the perfect balance of performance and comfort. Emmons delivered the car spotless inside and out. The Mercedes quality and AMG tuning make every drive special.",
        date: "2024-11-15"
      },
      {
        author: "Esther Bardin",
        rating: 5,
        text: "I loved the AMG GT43! It was beautiful, made my business trip memorable, and a very smooth, luxurious ride! I highly recommend Jon and Emmons Luxury. They are the best!",
        date: "2024-10-20"
      }
    ];



    // Function to render stars from rating

    function renderStars(rating) {
      const fullStars = Math.floor(rating);
      return '‚òÖ'.repeat(fullStars) + '‚òÜ'.repeat(5 - fullStars);
    }



    // Function to format date

    function formatDate(dateString) {
      const date = new Date(dateString);
      return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
    }



    // Function to render reviews

    function renderReviews(reviews) {
      const container = document.getElementById('reviews-container');
      if (!container) return;

      container.innerHTML = reviews.map(review => `
        <div class="testimonial">
          <div class="rating">${renderStars(review.rating)}</div>
          <p class="quote">"${review.text}"</p>
          <p class="author">‚Äî ${review.author}${review.date ? ' ‚Ä¢ ' + formatDate(review.date) : ''}</p>
        </div>
      `).join('');
    }



    // Function to filter 5-star reviews only
    function filterFiveStarReviews(reviews) {
      return reviews.filter(review => review.rating === 5);
    }

    // Function to get cached reviews
    function getCachedReviews() {
      try {
        const cached = localStorage.getItem(CACHE_KEY);
        if (!cached) return null;

        const { reviews, timestamp } = JSON.parse(cached);
        const now = Date.now();

        // Check if cache is still valid
        if (now - timestamp < CACHE_DURATION) {
          return reviews;
        }

        // Cache expired, remove it
        localStorage.removeItem(CACHE_KEY);
        return null;
      } catch (e) {
        console.error('Error reading cache:', e);
        return null;
      }
    }

    // Function to cache reviews
    function cacheReviews(reviews) {
      try {
        const cacheData = {
          reviews: reviews,
          timestamp: Date.now()
        };
        localStorage.setItem(CACHE_KEY, JSON.stringify(cacheData));
      } catch (e) {
        console.error('Error caching reviews:', e);
      }
    }

    // Function to fetch reviews from backend API with timeout
    async function fetchGoogleReviews() {
      // Check cache first (instant, no API call needed)
      const cached = getCachedReviews();
      if (cached) {
        console.log('Using cached reviews');
        return cached;
      }

      // If no API URL configured, use fallback (instant)
      if (!GOOGLE_REVIEWS_API_URL) {
        console.log('No API URL configured, using fallback reviews');
        return fallbackReviews;
      }

      try {
        // Create a timeout promise (5 seconds max)
        const timeoutPromise = new Promise((_, reject) => {
          setTimeout(() => reject(new Error('Request timeout')), 5000);
        });

        // Fetch with timeout
        const fetchPromise = fetch(GOOGLE_REVIEWS_API_URL, {
          method: 'GET',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          },
          // Add cache headers to help browser caching
          cache: 'default'
        });

        const response = await Promise.race([fetchPromise, timeoutPromise]);

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();
        
        // Expected response format: { reviews: [{ author, rating, text, date }, ...] }
        if (data.reviews && Array.isArray(data.reviews)) {
          // Filter for 5-star reviews only
          const fiveStarReviews = filterFiveStarReviews(data.reviews);
          
          // Cache the results
          if (fiveStarReviews.length > 0) {
            cacheReviews(fiveStarReviews);
          }
          
          return fiveStarReviews.length > 0 ? fiveStarReviews : fallbackReviews;
        }

        return fallbackReviews;
      } catch (error) {
        console.error('Error fetching Google reviews:', error);
        // Return fallback reviews on error (instant fallback)
        return fallbackReviews;
      }
    }

    // Load and display reviews (SEO-optimized: pre-rendered in HTML, updated dynamically)
    async function loadReviews() {
      // IMPORTANT: Reviews are already pre-rendered in HTML for SEO
      // Google can crawl them immediately without JavaScript
      // We only update if we have fresh reviews from the API
      
      // Check if we have cached or fresh reviews to update with
      const container = document.getElementById('reviews-container');
      if (!container) return;

      // Try to fetch fresh reviews in the background (non-blocking)
      // This runs after the page is interactive, so it doesn't slow anything down
      if (document.readyState === 'complete') {
        // Page already loaded, fetch in background
        fetchAndUpdateReviews();
      } else {
        // Wait for page to be fully loaded, then fetch (low priority)
        window.addEventListener('load', () => {
          // Use requestIdleCallback if available (runs when browser is idle)
          if ('requestIdleCallback' in window) {
            requestIdleCallback(() => {
              fetchAndUpdateReviews();
            }, { timeout: 2000 }); // Max 2 second wait
          } else {
            // Fallback: small delay to not block rendering
            setTimeout(() => {
              fetchAndUpdateReviews();
            }, 100);
          }
        });
      }
    }

    // Fetch and update reviews in background (non-blocking, SEO-friendly)
    async function fetchAndUpdateReviews() {
      try {
        const reviews = await fetchGoogleReviews();
        if (reviews && reviews.length > 0) {
          const container = document.getElementById('reviews-container');
          if (!container) return;

          // Check if we have new or different reviews to update
          const currentReviews = container.querySelectorAll('.testimonial');
          const reviewsChanged = currentReviews.length !== reviews.length || 
                !reviews.every((review, index) => {
                  const currentReview = currentReviews[index];
                  if (!currentReview) return false;
                  const currentText = currentReview.querySelector('.quote')?.textContent?.replace(/"/g, '').trim();
                  return currentText === review.text.trim();
                });

          // Only update if reviews have changed (avoid unnecessary DOM updates)
          if (reviewsChanged) {
            // Update the HTML content with fresh reviews
            renderReviews(reviews);
            
            // Update JSON-LD structured data for SEO
            updateStructuredData(reviews);
            
            console.log('Reviews updated with fresh data from Google');
          } else {
            // Reviews are the same, but still update structured data in case count changed
            updateStructuredData(reviews);
          }
        }
      } catch (error) {
        // Silently fail - we already have pre-rendered reviews in HTML for SEO
        console.debug('Could not update reviews (using pre-rendered HTML):', error);
      }
    }

    // Function to update JSON-LD structured data with fetched reviews
    function updateStructuredData(reviews) {
      try {
        // Find the Product schema script tag
        const productSchemaScript = document.querySelector('script[type="application/ld+json"]');
        if (!productSchemaScript) return;

        const schema = JSON.parse(productSchemaScript.textContent);
        
        if (schema['@type'] && (schema['@type'].includes('Product') || schema['@type'].includes('Vehicle'))) {
          // Update aggregate rating
          schema.aggregateRating = {
            "@type": "AggregateRating",
            "ratingValue": "5.0",
            "reviewCount": reviews.length.toString(),
            "bestRating": "5",
            "worstRating": "1"
          };

          // Update reviews array (limit to most recent 10 for SEO)
          schema.review = reviews.slice(0, 10).map(review => ({
            "@type": "Review",
            "author": {
              "@type": "Person",
              "name": review.author
            },
            "datePublished": review.date || new Date().toISOString().split('T')[0],
            "reviewBody": review.text,
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": review.rating.toString(),
              "bestRating": "5",
              "worstRating": "1"
            }
          }));

          // Update the script tag
          productSchemaScript.textContent = JSON.stringify(schema, null, 2);
        }

        // Also update the HTML meta tags for SEO
        const ratingMeta = document.querySelector('meta[name="rating"]');
        const reviewCountMeta = document.querySelector('meta[name="reviewCount"]');
        if (ratingMeta) ratingMeta.setAttribute('content', '5');
        if (reviewCountMeta) reviewCountMeta.setAttribute('content', reviews.length.toString());

        // Update the visible aggregate rating display if it exists
        const aggregateRatingDiv = document.querySelector('[itemprop="aggregateRating"]');
        if (aggregateRatingDiv) {
          const reviewCountSpan = aggregateRatingDiv.querySelector('[itemprop="reviewCount"]');
          const reviewCountMetaTag = aggregateRatingDiv.querySelector('meta[itemprop="reviewCount"]');
          if (reviewCountSpan) {
            reviewCountSpan.textContent = reviews.length;
          }
          if (reviewCountMetaTag) {
            reviewCountMetaTag.setAttribute('content', reviews.length.toString());
          }
        }
      } catch (error) {
        console.error('Error updating structured data:', error);
      }
    }

    // Load reviews when DOM is ready (not blocking page load)
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadReviews);
    } else {
      // DOM already ready, load immediately
      loadReviews();
    }



    // Gallery Image Navigation

    const galleryImages = [
      { src: 'https://storage.googleapis.com/msgsndr/wH2l3WqoQB0m8lZuKmP2/media/690cd623006d90b27e04fb3e.jpg', alt: 'Mercedes-AMG GT43 luxury sport sedan in Atlanta with performance styling and front view' },
      { src: 'https://storage.googleapis.com/msgsndr/wH2l3WqoQB0m8lZuKmP2/media/690cd6246f6d4c3ec957c6c2.jpg', alt: 'Mercedes-AMG GT43 rental in Atlanta - side profile with sleek design' },
      { src: 'https://storage.googleapis.com/msgsndr/wH2l3WqoQB0m8lZuKmP2/media/690cd6231aab9362aa2195e5.jpg', alt: 'Mercedes-AMG GT43 rental in Atlanta - rear view with performance exhaust' },
      { src: 'https://storage.googleapis.com/msgsndr/wH2l3WqoQB0m8lZuKmP2/media/690cd623ac59272d454e6854.jpg', alt: 'Mercedes-AMG GT43 rental in Atlanta - exterior detail and premium features' },
      { src: 'https://storage.googleapis.com/msgsndr/wH2l3WqoQB0m8lZuKmP2/media/690cd62397c05102face9199.jpg', alt: 'Mercedes-AMG GT43 rental in Atlanta - exterior view showcasing luxury design' },
      { src: 'https://storage.googleapis.com/msgsndr/wH2l3WqoQB0m8lZuKmP2/media/690cd6231aab9379702195e4.jpg', alt: 'Mercedes-AMG GT43 rental in Atlanta - detail shot highlighting performance styling' }
    ];

    let currentGalleryIndex = 0;

    function updateGalleryDisplay() {
      const mainImage = document.getElementById('mainGalleryImage');
      const thumbnails = document.querySelectorAll('.gallery-thumbnail');
      const counter = document.getElementById('currentImageIndex');
      const totalImages = document.getElementById('totalImages');

      if (mainImage && galleryImages[currentGalleryIndex]) {
        // Fade transition effect
        mainImage.style.opacity = '0';
        setTimeout(() => {
          mainImage.src = galleryImages[currentGalleryIndex].src;
          mainImage.alt = galleryImages[currentGalleryIndex].alt;
          mainImage.style.opacity = '1';
        }, 150);

        // Update thumbnails active state
        thumbnails.forEach((thumb, index) => {
          if (index === currentGalleryIndex) {
            thumb.classList.add('active');
            thumb.setAttribute('aria-selected', 'true');
          } else {
            thumb.classList.remove('active');
            thumb.setAttribute('aria-selected', 'false');
          }
        });

        // Update counter
        if (counter) {
          counter.textContent = currentGalleryIndex + 1;
        }
        if (totalImages) {
          totalImages.textContent = galleryImages.length;
        }

        // Scroll active thumbnail into view (on mobile)
        if (window.innerWidth <= 600 && thumbnails[currentGalleryIndex]) {
          thumbnails[currentGalleryIndex].scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
        }
      }
    }

    function setGalleryImage(index) {
      if (index >= 0 && index < galleryImages.length) {
        currentGalleryIndex = index;
        updateGalleryDisplay();
      }
    }

    function changeGalleryImage(direction) {
      const newIndex = currentGalleryIndex + direction;
      if (newIndex < 0) {
        currentGalleryIndex = galleryImages.length - 1;
      } else if (newIndex >= galleryImages.length) {
        currentGalleryIndex = 0;
      } else {
        currentGalleryIndex = newIndex;
      }
      updateGalleryDisplay();
    }

    // Keyboard navigation for gallery (when gallery is focused or user is interacting with it)
    let galleryIsFocused = false;
    const galleryContainer = document.querySelector('.gallery-container');
    
    if (galleryContainer) {
      // Track when user interacts with gallery
      galleryContainer.addEventListener('mouseenter', () => { galleryIsFocused = true; });
      galleryContainer.addEventListener('mouseleave', () => { galleryIsFocused = false; });
      galleryContainer.addEventListener('focusin', () => { galleryIsFocused = true; });
      galleryContainer.addEventListener('focusout', () => { galleryIsFocused = false; });
      
      document.addEventListener('keydown', function(e) {
        // Only handle arrow keys if gallery is in focus or user clicked on it
        if (galleryIsFocused && (e.key === 'ArrowLeft' || e.key === 'ArrowRight')) {
          // Check if user is not typing in an input field
          if (document.activeElement.tagName !== 'INPUT' && document.activeElement.tagName !== 'TEXTAREA') {
            e.preventDefault();
            if (e.key === 'ArrowLeft') {
              changeGalleryImage(-1);
            } else if (e.key === 'ArrowRight') {
              changeGalleryImage(1);
            }
          }
        }
      });
    }

    // Touch/swipe support for mobile
    let touchStartX = 0;
    let touchEndX = 0;

    const galleryMainElement = document.getElementById('galleryMain');
    if (galleryMainElement) {
      galleryMainElement.addEventListener('touchstart', function(e) {
        touchStartX = e.changedTouches[0].screenX;
      }, { passive: true });

      galleryMainElement.addEventListener('touchend', function(e) {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
      }, { passive: true });
    }

    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;
      
      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          // Swipe left - next image
          changeGalleryImage(1);
        } else {
          // Swipe right - previous image
          changeGalleryImage(-1);
        }
      }
    }

    // Initialize gallery on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        updateGalleryDisplay();
      });
    } else {
      updateGalleryDisplay();
    }



    // Booking Modal Functions

    function openBookingModal() {
      const modal = document.getElementById('bookingModal');
      if (modal) {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('pickupDate').setAttribute('min', today);
        document.getElementById('returnDate').setAttribute('min', today);
      }
    }

    function closeBookingModal() {
      const modal = document.getElementById('bookingModal');
      if (modal) {
        modal.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    // Close modal when clicking outside

    document.getElementById('bookingModal')?.addEventListener('click', function(e) {
      if (e.target === this) {
        closeBookingModal();
      }
    });

    // Close modal with Escape key

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeBookingModal();
      }
    });

    // Handle file upload display

    document.getElementById('driversLicense')?.addEventListener('change', function(e) {
      const file = e.target.files[0];
      const uploadedDiv = document.getElementById('licenseUploaded');
      if (file && uploadedDiv) {
        uploadedDiv.textContent = `‚úì ${file.name} uploaded`;
        uploadedDiv.classList.add('show');
      }
    });

    document.getElementById('insuranceProof')?.addEventListener('change', function(e) {
      const file = e.target.files[0];
      const uploadedDiv = document.getElementById('insuranceUploaded');
      if (file && uploadedDiv) {
        uploadedDiv.textContent = `‚úì ${file.name} uploaded`;
        uploadedDiv.classList.add('show');
      }
    });

    // GoHighLevel Form Configuration
    // TODO: Replace with your actual GHL form endpoint URL
    // To find your endpoint: GoHighLevel > Sites > Forms > Your Form > Integrate Form
    // It should look like: https://services.leadconnectorhq.com/forms/submit/YOUR_FORM_ID
    // Or: https://api.gohighlevel.com/v1/forms/YOUR_FORM_ID/submit
    const GHL_FORM_ENDPOINT = 'YOUR_GHL_FORM_ENDPOINT_URL_HERE';

    // Handle form submission to GoHighLevel
    async function handleBookingSubmit(event) {
      event.preventDefault();
      const form = document.getElementById('bookingForm');
      const submitButton = form.querySelector('button[type="submit"]');
      const originalButtonText = submitButton.textContent;
      
      // Validate GHL endpoint is configured
      if (GHL_FORM_ENDPOINT === 'YOUR_GHL_FORM_ENDPOINT_URL_HERE' || !GHL_FORM_ENDPOINT) {
        alert('Form endpoint not configured. Please contact the website administrator.');
        console.error('GHL_FORM_ENDPOINT not configured. Please set your GoHighLevel form endpoint URL.');
        return;
      }

      const formData = new FormData(form);

      // Validate return date is after pickup date
      const pickupDate = new Date(formData.get('pickupDate'));
      const returnDate = new Date(formData.get('returnDate'));
      if (returnDate <= pickupDate) {
        alert('Return date must be after pickup date.');
        return;
      }

      // Check if files are uploaded
      const licenseFile = formData.get('driversLicense');
      const insuranceFile = formData.get('insuranceProof');
      if (!licenseFile || licenseFile.size === 0) {
        alert('Please upload your driver\'s license.');
        return;
      }
      if (!insuranceFile || insuranceFile.size === 0) {
        alert('Please upload proof of insurance.');
        return;
      }

      // Disable submit button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Submitting...';

      try {
        // Submit form data (including files) to GoHighLevel
        const response = await fetch(GHL_FORM_ENDPOINT, {
          method: 'POST',
          body: formData, // FormData automatically includes files
          // Don't set Content-Type header - browser will set it with boundary for multipart/form-data
        });

        if (response.ok) {
          // Success - form submitted to GHL
          const result = await response.json().catch(() => ({})); // Some GHL endpoints may not return JSON
          
          // Show success message
          alert('Thank you for your request! Your documents have been received. We\'ll contact you within 24 hours to confirm availability and pricing.');
          
          // Track form submission (GA4)
          track('form_submit', {
            form_name: 'bmw_m3_rental_request',
            form_location: 'booking_modal'
          });
          
          // Close modal and reset form
          closeBookingModal();
          form.reset();
          document.getElementById('licenseUploaded')?.classList.remove('show');
          document.getElementById('insuranceUploaded')?.classList.remove('show');
        } else {
          // Handle error response
          const errorText = await response.text();
          console.error('Form submission error:', response.status, errorText);
          
          // Try to parse error message
          let errorMessage = 'There was an error submitting your request.';
          try {
            const errorData = JSON.parse(errorText);
            errorMessage = errorData.message || errorData.error || errorMessage;
          } catch (e) {
            // If not JSON, use default message
          }
          
          alert(errorMessage + ' Please try again or contact us directly at drive@emmonsluxury.com');
        }
      } catch (error) {
        // Handle network or other errors
        console.error('Error submitting form:', error);
        alert('There was a network error submitting your request. Please check your internet connection and try again, or contact us directly at drive@emmonsluxury.com');
      } finally {
        // Re-enable submit button
        submitButton.disabled = false;
        submitButton.textContent = originalButtonText;
      }
    }

    // Update return date minimum when pickup date changes
    document.getElementById('pickupDate')?.addEventListener('change', function() {
      const pickupDate = this.value;
      const returnDateInput = document.getElementById('returnDate');
      if (pickupDate && returnDateInput) {
        const minReturnDate = new Date(pickupDate);
        minReturnDate.setDate(minReturnDate.getDate() + 1);
        returnDateInput.setAttribute('min', minReturnDate.toISOString().split('T')[0]);
        if (returnDateInput.value && returnDateInput.value <= pickupDate) {
          returnDateInput.value = minReturnDate.toISOString().split('T')[0];
        }
      }
    });

    // GA4 event helpers (no-op if gtag not present)
    function track(name, params={}) {
      try { window.gtag && window.gtag('event', name, params); } catch(e){}
      console.debug('[GA4]', name, params);
    }

    // Bind CTA click events
    [
      ['sticky-book','cta_book_click',{position:'sticky'}],
      ['nav-book','cta_book_click',{position:'nav'}],
      ['hero-book','cta_book_click',{position:'hero'}],
      ['bottom-book','cta_book_click',{position:'bottom'}]
    ].forEach(([id, evt, data])=>{
      const el = document.getElementById(id);
      if(el){ el.addEventListener('click', ()=> track(evt, data)); }
    });

    // Optional: reveal sticky bar only after slight scroll (A/B ready)
    let revealed=false;
    const sticky=document.querySelector('.sticky-cta');
    function maybeReveal(){
      if(revealed) return;
      if(window.scrollY>80){ sticky.style.background='rgba(10,10,10,.96)'; revealed=true; }
    }
    window.addEventListener('scroll', maybeReveal, {passive:true});



    // Social Sharing Functions

    function toggleShareMenu() {

      const menu = document.getElementById('shareMenu');

      if (menu) {

        menu.classList.toggle('active');

      }

    }

    // Close share menu when clicking outside

    document.addEventListener('click', function(e) {

      const shareBtn = document.querySelector('.share-btn');

      const shareMenu = document.getElementById('shareMenu');

      if (shareMenu && shareBtn && !shareBtn.contains(e.target) && !shareMenu.contains(e.target)) {

        shareMenu.classList.remove('active');

      }

    });

    // Share on specific platform

    function shareOnPlatform(platform) {

      const url = window.location.href;

      const title = 'Mercedes-AMG GT43 Rental in Atlanta | Emmons Luxury';

      const text = 'Check out this premium Mercedes-AMG GT43 rental in Atlanta. Hotel & wedding-ready with concierge delivery!';

      let shareLink = '';

      switch(platform) {

        case 'facebook':

          shareLink = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;

          break;

        case 'twitter':

          shareLink = `https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(text)}`;

          break;

        case 'linkedin':

          shareLink = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;

          break;

        case 'whatsapp':

          shareLink = `https://wa.me/?text=${encodeURIComponent(text + ' ' + url)}`;

          break;

        case 'messenger':

          shareLink = `https://www.facebook.com/dialog/send?link=${encodeURIComponent(url)}&app_id=YOUR_APP_ID`;

          break;

        case 'email':

          shareLink = `mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(text + '\n\n' + url)}`;

          break;

        case 'sms':

          shareLink = `sms:?body=${encodeURIComponent(text + ' ' + url)}`;

          break;

      }

      if (shareLink) {

        window.open(shareLink, '_blank', 'width=600,height=400');

        document.getElementById('shareMenu').classList.remove('active');

      }

    }

    // Copy link to clipboard

    function copyLink() {

      const url = window.location.href;

      if (navigator.clipboard && navigator.clipboard.writeText) {

        navigator.clipboard.writeText(url).then(() => {

          const menu = document.getElementById('shareMenu');

          const copyItem = menu.querySelector('.share-menu-item:last-child span');

          const originalText = copyItem.textContent;

          copyItem.textContent = '‚úì Link Copied!';

          setTimeout(() => {

            copyItem.textContent = originalText;

            menu.classList.remove('active');

          }, 2000);

        }).catch(() => {

          fallbackCopyLink(url);

        });

      } else {

        fallbackCopyLink(url);

      }

    }

    // Fallback copy method

    function fallbackCopyLink(text) {

      const textArea = document.createElement('textarea');

      textArea.value = text;

      textArea.style.position = 'fixed';

      textArea.style.left = '-999999px';

      document.body.appendChild(textArea);

      textArea.focus();

      textArea.select();

      try {

        document.execCommand('copy');

        const menu = document.getElementById('shareMenu');

        const copyItem = menu.querySelector('.share-menu-item:last-child span');

        const originalText = copyItem.textContent;

        copyItem.textContent = '‚úì Link Copied!';

        setTimeout(() => {

          copyItem.textContent = originalText;

          menu.classList.remove('active');

        }, 2000);

      } catch (err) {

        console.error('Failed to copy:', err);

      }

      document.body.removeChild(textArea);

    }

    // Share button click handler

    const shareBtn = document.getElementById('shareBtn');

    if (shareBtn) {

      shareBtn.addEventListener('click', function(e) {

        e.stopPropagation();

        // Use Web Share API on mobile if available

        if (navigator.share) {

          navigator.share({

            title: 'Mercedes-AMG GT43 Rental in Atlanta | Emmons Luxury',

            text: 'Check out this premium Mercedes-AMG GT43 rental in Atlanta. Hotel & wedding-ready with concierge delivery!',

            url: window.location.href

          }).catch(() => {

            // User cancelled or error occurred - fallback to menu

            toggleShareMenu();

          });

        } else {

          // Desktop: show share menu

          toggleShareMenu();

        }

      });

    }

  </script>



</body>

</html>
